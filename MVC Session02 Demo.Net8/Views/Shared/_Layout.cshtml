<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/tailwindcss/tailwind.min.css" rel="stylesheet" />

</head>
<body>
    <!--Start Header-->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <!-- Logo -->
                    <div class="shrink-0 flex items-center">
                        <a href="/Home/Index" class="text-xl font-bold text-gray-800">MVC PROJECT</a>
                    </div>
                    <!-- Links -->
                    <div class="hidden sm:-my-px sm:ml-6 sm:flex sm:space-x-8">
                        <a href="/Home/Index" class="text-gray-900 inline-flex items-center px-1 pt-1 text-sm font-medium">Home</a>
                        <a href="/Home/AboutUs" class="text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium">About Us</a>
                        <a href="/Home/ContactUs" class="text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium">Contact Us</a>
                        <a href="/Home/Privacy" class="text-gray-500 hover:text-gray-700 inline-flex items-center px-1 pt-1 text-sm font-medium">Privacy</a>
                    </div>
                </div>
                <!-- Mobile Menu Button -->
                <div class="sm:hidden flex items-center">
                    <button id="mobile-menu-button" class="text-gray-900 hover:text-gray-500">
                        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="sm:hidden hidden">
            <div class="pt-2 pb-3 space-y-1">
                <a href="/Home/Index" class="text-gray-900 block px-3 py-2 text-base font-medium">Home</a>
                <a href="Home/AboutUs" class="text-gray-500 hover:bg-gray-50 block px-3 py-2 text-base font-medium">About Ust</a>
                <a href="Home/ContactUs" class="text-gray-500 hover:bg-gray-50 block px-3 py-2 text-base font-medium">Contact Us</a>
                <a href="Home/Privacy" class="text-gray-500 hover:bg-gray-50 block px-3 py-2 text-base font-medium">Privacy</a>
            </div>
        </div>
    </nav>
    <!--End Header-->
    <div>
        @RenderBody()
    </div>
    <!--Start Footer-->
    <footer class="bg-gray-800 text-white">
        <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Section 1: Logo and Description -->
                <div>
                    <h2 class="text-lg font-bold">Your Company</h2>
                    <p class="mt-4 text-gray-400">
                        Building innovative solutions for a better tomorrow. Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    </p>
                </div>

                <!-- Section 2: Links -->
                <div>
                    <h2 class="text-lg font-bold">Quick Links</h2>
                    <ul class="mt-4 space-y-2">
                        <li><a href="/Home/Index" class="text-gray-400 hover:text-white">Home</a></li>
                        <li><a href="Home/AboutUs" class="text-gray-400 hover:text-white">About Us</a></li>
                        <li><a href="Home/ContactUs" class="text-gray-400 hover:text-white">Services</a></li>
                        <li><a href="Home/Privacy" class="text-gray-400 hover:text-white">Contact</a></li>
                    </ul>
                </div>

                <!-- Section 3: Contact Information -->
                <div>
                    <h2 class="text-lg font-bold">Contact Us</h2>
                    <ul class="mt-4 space-y-2 text-gray-400">
                        <li><span class="font-semibold">Email:</span> info@company.com</li>
                        <li><span class="font-semibold">Phone:</span> +123 456 7890</li>
                        <li><span class="font-semibold">Address:</span> 123 Main St, City, Country</li>
                    </ul>
                </div>
            </div>

            <!-- Social Media Icons -->
            <div class="mt-8 flex justify-center space-x-6">
                <a href="#" class="text-gray-400 hover:text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path d="M18 2H6a2 2 0 00-2 2v16a2 2 0 002 2h6v-7H9v-3h3v-2a4 4 0 014-4h2v3h-2c-.552 0-1 .448-1 1v2h3l-1 3h-2v7h4a2 2 0 002-2V4a2 2 0 00-2-2z" />
                    </svg>
                </a>
                <a href="#" class="text-gray-400 hover:text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path d="M22.54 6.42a8.59 8.59 0 01-2.357.647A4.12 4.12 0 0021.94 5.11a8.57 8.57 0 01-2.605.993 4.13 4.13 0 00-7.034 2.827 4.07 4.07 0 00.108.946A11.73 11.73 0 013 4.82a4.13 4.13 0 001.276 5.526 4.07 4.07 0 01-1.87-.52v.05a4.13 4.13 0 003.31 4.042 4.12 4.12 0 01-1.866.07 4.13 4.13 0 003.85 2.86A8.3 8.3 0 012 18.56 11.71 11.71 0 007.29 20c7.547 0 11.675-6.15 11.675-11.475 0-.175-.005-.35-.014-.523A8.21 8.21 0 0023 5.91a8.42 8.42 0 01-2.46.68z" />
                    </svg>
                </a>
                <a href="#" class="text-gray-400 hover:text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path d="M12 2C6.48 2 2 6.48 2 12c0 4.84 3.66 8.83 8.35 9.71.61.11.85-.27.85-.6v-2.12c-3.39.73-4.1-1.66-4.1-1.66-.55-1.4-1.35-1.77-1.35-1.77-1.1-.75.08-.74.08-.74 1.2.08 1.83 1.23 1.83 1.23 1.08 1.82 2.82 1.3 3.51.99.11-.8.42-1.3.77-1.6-2.7-.3-5.54-1.35-5.54-6.01 0-1.32.47-2.4 1.24-3.24-.12-.31-.54-1.54.12-3.2 0 0 1.02-.33 3.35 1.23a11.56 11.56 0 016.1 0C17.96 5.06 19 5.4 19 5.4c.66 1.66.24 2.89.12 3.2.78.85 1.23 1.93 1.23 3.24 0 4.68-2.85 5.7-5.57 6 .43.37.81 1.1.81 2.22v3.3c0 .34.24.72.86.6A11.75 11.75 0 0024 12c0-6.52-5.48-11-12-11z" />
                    </svg>
                </a>
            </div>
        </div>

        <!-- Copyright Section -->
        <div class="bg-gray-700 py-4">
            <div class="max-w-7xl mx-auto text-center text-gray-400">
                <p>&copy; @DateTime.Now.Year Your Company. All rights reserved.</p>
            </div>
        </div>
    </footer>
    <!--End Footer-->

    <script>
        document.getElementById('mobile-menu-button').addEventListener('click', function () {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });
    </script>
</body>
</html>
